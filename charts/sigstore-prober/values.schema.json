{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "imagePullSecrets": {
            "type": "array"
        },
        "namespace": {
            "type": "object",
            "properties": {
                "create": {
                    "type": "boolean"
                },
                "name": {
                    "type": "string"
                }
            }
        },
        "prometheus": {
            "type": "object",
            "properties": {
                "port": {
                    "type": "integer"
                }
            }
        },
        "serviceAccount": {
            "type": "object",
            "properties": {
                "create": {
                    "type": "boolean"
                },
                "name": {
                    "type": "string"
                }
            }
        },
        "spec": {
            "type": "object",
            "properties": {
                "args": {
                    "type": "object",
                    "properties": {
                        "frequency": {
                            "type": "integer"
                        },
                        "fulcioHost": {
                            "type": "string"
                        },
                        "fulcioRequests": {
                            "type": "array"
                        },
                        "rekorHost": {
                            "type": "string"
                        },
                        "rekorRequests": {
                            "type": "array"
                        },
                        "trustRekorAPIPublicKey": {
                            "type": "boolean"
                        },
                        "writeProber": {
                            "type": "boolean"
                        }
                    }
                },
                "image": {
                    "type": "string"
                },
                "imagePullPolicy": {
                    "type": "string"
                },
                "matchLabels": {
                    "type": "object",
                    "properties": {
                        "app": {
                            "type": "string"
                        }
                    }
                },
                "replicaCount": {
                    "type": "integer"
                },
                "resources": {
                    "type": "object",
                    "properties": {
                        "limits": {
                            "type": "object",
                            "properties": {
                                "cpu": {
                                    "type": "string"
                                },
                                "memory": {
                                    "type": "string"
                                }
                            }
                        },
                        "requests": {
                            "type": "object",
                            "properties": {
                                "cpu": {
                                    "type": "string"
                                },
                                "memory": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
